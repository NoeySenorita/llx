<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    tools:context="com.outsourcing.llxpb.view.activity.LoginActivity">
    <TextView
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="注册"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_editData"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="24dp"
            android:background="@mipmap/logo_login"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <TextView
            android:textSize="18sp"
            android:textColor="#333333"
            android:text="劳力信"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone"
            android:inputType="phone"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入手机号"
            android:textColor="#333333"
            android:textSize="17sp"
            android:textColorHint="#ffcccccc"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <View
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_code"
                android:inputType="number"
                android:hint="请输入验证码"
                android:textColor="#333333"
                android:textSize="17sp"
                android:textColorHint="#ffcccccc"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp" />
            <TextView
                android:onClick="getCode"
                android:id="@+id/tv_getCode"
                android:textSize="14sp"
                android:textColor="#E88110"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:inputType="textPassword"
            android:textColorHint="#ffcccccc"
            android:id="@+id/et_ps"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入密码(最少6位)"
            android:textColor="#333333"
            android:textSize="17sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <View
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:textColorHint="#ffcccccc"
            android:id="@+id/et_name"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入姓名"
            android:textColor="#333333"
            android:textSize="17sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <View
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:onClick="registerServer"
            android:background="@drawable/login_button"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="16dp"
            android:text="立即注册"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:onClick="userRegister"
                android:id="@+id/tv_register"
                android:textSize="14sp"
                android:textColor="#333333"

                android:text="点击按钮表示同意"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:onClick="goAgreement"
                android:id="@+id/tv_agreement"
                android:textSize="14sp"
                android:textColor="#E88110"
                android:text="《*****协议》"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@mipmap/group"
            android:layout_marginTop="60dp"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <TextView
            android:textSize="20sp"
            android:textColor="#333333"
            android:text="注册成功"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="goLogin"
            android:background="@drawable/login_button"
            android:layout_marginTop="59dp"
            android:layout_marginLeft="16dp"
            android:text="返回登录"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />
    </LinearLayout>

</LinearLayout>
