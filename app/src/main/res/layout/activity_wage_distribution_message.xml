<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.outsourcing.llxpb.view.activity.WageDistributionMessageActivity">
    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:id="@+id/tv_h1"
            android:text="细目名称"
            style="@style/style_early_warning_table_cell" />
        <TextView
            android:id="@+id/tv_h2"
            android:text="单价"
            style="@style/style_early_warning_table_cell" />
        <TextView
            android:id="@+id/tv_h3"
            android:text="数量"
            style="@style/style_early_warning_table_cell" />
        <TextView
            android:id="@+id/tv_h4"
            android:text="合价"
            style="@style/style_early_warning_table_cell" />
    </LinearLayout>
    <com.outsourcing.llxpb.ui.customView.RecyclerLayout
        android:id="@+id/rvl_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:background="#ffe88110"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开累申报总计："
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/money"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="20dp"
            android:text="1000W"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
    </RelativeLayout>
</LinearLayout>
